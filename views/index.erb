
<div id="content" align="center">
    <table class="loadfile" style="background: white;">
        <tr style="">
            <td>
                <nav>
                    <ul>
                        <% programs.sort.each do |p| %>
                        <li><a href="<%= p.name %>" <%=current?('/'+p.name)%>><%= p.name %></a></li>
                        <% end %>
                    </ul>
                </nav>
            </td>
        </tr>
        <tr>
            <td>
                <input type="file" id="examples" />
            </td>
        </tr>
        <tr>
            <td>
                <form action="/save" method="post">
                <textarea id="input" name="input" autofocus rows = "7">
                    <%= source %>
                </textarea>
            <br/>
            <label for="saveas">Save the code as:</label>
            <input id="saveas" type="text" name="fname" 
                   title="Un identificador (que no sea la palabra 'test')"
                   pattern="^(?!test$)\w+$"/>
          </form>
        </td>
      </tr>
      <tr>
        <td><button class="mylink" id="parse" type="button">Parsear la entrada</button></td>
      </tr>
    </table>
  </p>


  <p>
    <div id="flash"><%= flash[:notice] if flash[:notice]%></div>
  </p>

  <div class="hidden" id="out">
    <table class="ini">
      <thead>
      </thead>
      <tbody class="scrollContent">
        <tr>
          <td>
            <div class="output"><!-- Output goes here! --> 
              <pre>
                <span id="output"></span>
              </pre>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

</div> <!-- content -->

